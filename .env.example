# ==============================================
# ENVIRONMENT CONFIGURATION
# ==============================================
NODE_ENV=development
PORT=3000

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# Database Type: 'mongodb' or 'mysql'
DB_TYPE=mongodb

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/backend_template
MONGODB_TEST_URI=mongodb://localhost:27017/backend_template_test
MONGODB_DB_NAME=backend_template

# MySQL Configuration (when DB_TYPE=mysql)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=backend_template
MYSQL_USERNAME=root
MYSQL_PASSWORD=password
MYSQL_TEST_DATABASE=backend_template_test

# ==============================================
# JWT CONFIGURATION
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# ==============================================
# CACHE CONFIGURATION
# ==============================================
CACHE_DEFAULT_TTL=600
CACHE_CHECK_PERIOD=120

# ==============================================
# EMAIL SERVICE CONFIGURATION
# ==============================================
EMAIL_PROVIDER=resend

# Resend Configuration
RESEND_API_KEY=your-resend-api-key
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Your App Name

# SendGrid Configuration (future use)
# SENDGRID_API_KEY=your-sendgrid-api-key

# ==============================================
# ANALYTICS CONFIGURATION (OPTIONAL)
# ==============================================
ANALYTICS_ENABLED=false
ANALYTICS_PROVIDER=mixpanel

# Mixpanel Configuration
MIXPANEL_TOKEN=your-mixpanel-token

# ==============================================
# BACKGROUND JOBS CONFIGURATION
# ==============================================
JOB_POLL_INTERVAL=5000
JOB_MAX_RETRIES=3
JOB_CLEANUP_INTERVAL=86400000

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ==============================================
# FILE UPLOAD CONFIGURATION
# ==============================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# ==============================================
# EXTERNAL SERVICES
# ==============================================
# AWS S3 (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your-bucket-name

# ==============================================
# INTERNAL API CONFIGURATION
# ==============================================
# Internal API token for admin endpoints (email, cache, docs)
# Generate a secure random string for production
INTERNAL_API_TOKEN=your-super-secure-internal-api-token-here

# ==============================================
# DEVELOPMENT & DEBUGGING
# ==============================================
# Set to true to enable detailed error responses in development
DETAILED_ERRORS=true

# Set to true to enable request logging
ENABLE_REQUEST_LOGGING=true

# Set to true to seed database on startup (development only)
AUTO_SEED_DB=false

INTERNAL_API_TOKEN=fjfj