{
  "name": "buffer-lyte",
  "version": "1.0.0",
  "description": "Backend for buffer-lyte, a simple content analysis tool with ai",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon server.ts",
    "build": "rimraf dist && tsc",
    "start": "node dist/server.js",
    "start:prod": "npm run build && npm run start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts server.ts",
    "lint:fix": "eslint src/**/*.ts server.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"server.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"server.ts\"",
    "docker:dev": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "clean": "rimraf dist coverage",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "ai",
    "content-analysis",
    "nodejs",
    "typescript",
    "express",
    "mongodb",
    "anthropic",
    "claude",
    "rest-api",
    "jwt",
    "authentication"
  ],
  "author": "BuffByte Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.57.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "nanoid": "^5.1.5",
    "node-cache": "^5.1.2",
    "winston": "^3.11.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
